    <TextView
        android:id="@+id/date"
        android:text="25/10/2020"
        android:layout_alignTop="@id/title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
